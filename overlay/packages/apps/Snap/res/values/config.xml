<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Opens back camera using openLegacy() -->
    <bool name="back_camera_open_legacy">false</bool>

    <!-- Opens front camera using openLegacy() -->
    <bool name="front_camera_open_legacy">false</bool>

    <!-- Set's manufacturer specific parameters on startup.
         Example: lge-camera=1;cam-mode=0 -->
    <string name="manufacturer_key_values">lge-camera=1</string>

    <!-- Use following iso parameter.
         Example: lg-iso
                  lg-iso-values -->
    <string name="key_iso">lg-iso</string>
    <string name="key_iso_values">lg-iso-values</string>

    <!-- ISO values use numbers.
         Example: 50 instead of ISO50 -->
    <bool name="iso_values_use_numbers">true</bool>

    <!-- Enable support for LGE HDR -->
    <bool name="lge_hdr_mode">true</bool>
</resources>
